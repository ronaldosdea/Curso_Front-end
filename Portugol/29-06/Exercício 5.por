programa {
  funcao inicio() {
    cadeia nome
    real media, n1, n2, n3

      escreva("Resultado do Semestre")

      escreva("\n Nome do Aluno: ")
      leia(nome)
      escreva("\n Nota da 1ª prova: ")
      leia(n1)
      escreva("\n Nota da 2ª prova: ")
      leia(n2)
      escreva("\n Nota da 3ª prova: ")
      leia(n3)

      media = (n1+n2+n3)/3

      escreva("\n Nome do Aluno: ", nome)
      escreva("\n A média final: ", media)
      escreva("\n Continue a nadar!")


  }
}
