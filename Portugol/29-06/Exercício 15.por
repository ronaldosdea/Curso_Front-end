programa {
  const real pi = 3.14

    funcao inicio() {
    real raio, resultado

    escreva("\n Vamos calcular a área de um círculo!")
    escreva("\n Informe o raio do círculo em cm: ")
    leia(raio)

    limpa()

    resultado = (pi*raio)

    escreva("\n A área do círculo corresponde a: ", resultado*raio, " cm")

  }
}
